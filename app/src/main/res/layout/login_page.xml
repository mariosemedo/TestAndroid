<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage">


    <ImageView
        android:id="@+id/rectangle_waleed"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:background="@drawable/rectangle_waleed"
        app:layout_constraintEnd_toStartOf="@+id/barberpic_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/barberpic_left"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/barberpic_left"
        android:layout_width="43dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/barbershop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/barberpic_right"
        android:layout_width="43dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/barbershop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Waleed"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/ledger"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_waleed"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_waleed"
        app:layout_constraintStart_toStartOf="@+id/rectangle_waleed"
        app:layout_constraintTop_toTopOf="@+id/rectangle_waleed" />


    <View
        android:id="@+id/rectangle_userinput"
        android:layout_width="234dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rectangle_input2"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_passwinput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/rectangle_passwinput"
        android:layout_width="234dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rectangle_input2"
        app:layout_constraintBottom_toTopOf="@+id/button_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/input_username"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:ems="10"
        android:gravity="center"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_userinput"
        app:layout_constraintStart_toStartOf="@+id/rectangle_userinput"
        app:layout_constraintTop_toTopOf="@+id/rectangle_userinput" />


    <EditText
        android:id="@+id/input_password"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_passwinput"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rectangle_passwinput"
        app:layout_constraintTop_toTopOf="@+id/rectangle_passwinput" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="234dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rectangle_login2"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_waleed"
        app:layout_constraintVertical_bias="0.351" />

    <TextView
        android:id="@+id/textview_bannertop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:lineSpacingExtra="30sp"
        android:text="Premium Service"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:fontFamily="@font/ledger"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_waleed"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_waleed"
        app:layout_constraintStart_toStartOf="@+id/rectangle_waleed" />

    <TextView
        android:id="@+id/textView_bannerbottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Haircut And Shaving"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:fontFamily="@font/ledger"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_waleed"
        app:layout_constraintStart_toStartOf="@+id/rectangle_waleed"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_waleed" />


</android.support.constraint.ConstraintLayout>